---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="flex items-end justify-between">
  <h2 class="font-semibold lg:text-2xl text-base md:text-xl">
    <a href="/">{SITE_TITLE}</a>
  </h2>
  <nav class="flex items-end justify-evenly space-x-3">
    <HeaderLink href="/about">About</HeaderLink>
    <form class="flex space-x-2">
      <input
        type="email"
        placeholder="Enter your email"
        class="flex placeholder:text-gray-800 px-3 text-sm py-1 bg-none bg-transparent border-b border-black focus:outline-none"
      />
      <button
        type="submit"
        class="bg-gray-900 rounded-sm text-sm text-white px-3 py-1 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
        Subscribe
      </button>
    </form>
  </nav>
</header>
